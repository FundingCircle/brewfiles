#!/bin/bash

set -e

if [[ -z $(which brew) ]]; then
  echo 'Unable to find brew, please install it from http://brew.sh'
  open 'http://brew.sh'
  exit 1
fi

source "${BASH_SOURCE%/*}/cassandra_version_check.sh"

brew update
brew upgrade
brew tap Homebrew/bundle
brew bundle
brew cleanup

brew link --force qt55
